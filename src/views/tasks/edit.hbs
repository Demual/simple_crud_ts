<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/tasks/edit/{{readTask._id}}" method="POST">
                    
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Write your title" value="{{readTask.title}}"
                            class="form-control" autofocus>
                    </div>

                    <div class="form-group">
                        <input type="text" name="description" class="form-control" value="{{readTask.description}}"
                            placeholder="Write a description">
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-block">
                        Update
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>