<div class="row">

    {{#each listTask}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h3>{{title}}</h3>
                <p>{{description}}</p>
            </div>
            
            <div class="card-footer d-flex justify-content-between align-items-center">
                
                <a href="/tasks/edit/{{_id}}" class="btn btn-primary">
                    Edit Task
                </a>

                <a href="/tasks/delete/{{_id}}" class="btn btn-danger">
                    Delete Task
                </a>

            </div>

        </div>
    </div>
    {{/each}}
</div>